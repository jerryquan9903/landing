datasource sqlite {
  url      = env("DATABASE_URL")
  provider = "sqlite"
}

generator client {
  provider = "prisma-client-js"
  output   = "node_modules/.prisma/client"
}

model User {
  id       String @id @default(cuid())
  name     String @default("")
  email    String @unique @default("")
  password String
  posts    Post[] @relation("Post_author")
}

model Post {
  id              String    @id @default(cuid())
  title           String    @default("")
  status          String?   @default("draft")
  image_filesize  Int?
  image_extension String?
  image_width     Int?
  image_height    Int?
  image_mode      String?
  image_id        String?
  content         String    @default("[{\"type\":\"paragraph\",\"children\":[{\"text\":\"\"}]}]")
  publishDate     DateTime?
  author          User?     @relation("Post_author", fields: [authorId], references: [id])
  authorId        String?   @map("author")
  tags            Tag[]     @relation("Post_tags")

  @@index([authorId])
}

model Tag {
  id    String @id @default(cuid())
  name  String @default("")
  posts Post[] @relation("Post_tags")
}

model Sheet {
  id            String      @id @default(cuid())
  title         String      @default("")
  publishDate   DateTime
  difficulty    Difficulty? @relation("Sheet_difficulty", fields: [difficultyId], references: [id])
  difficultyId  String?     @map("difficulty")
  media         Source?     @relation("Sheet_media", fields: [mediaId], references: [id])
  mediaId       String?     @map("media")
  artist        Artist[]    @relation("Artist_rel")
  notes         String      @default("")
  link_filesize Int?
  link_mode     String?
  link_filename String?

  @@index([difficultyId])
  @@index([mediaId])
}

model Difficulty {
  id   String  @id @default(cuid())
  name Int?
  rel  Sheet[] @relation("Sheet_difficulty")
}

model Artist {
  id   String  @id @default(cuid())
  name String  @default("")
  rel  Sheet[] @relation("Artist_rel")
}

model Source {
  id              String  @id @default(cuid())
  name            String  @default("")
  image_filesize  Int?
  image_extension String?
  image_width     Int?
  image_height    Int?
  image_mode      String?
  image_id        String?
  rel             Sheet[] @relation("Sheet_media")
}

model Workplace {
  id        String    @id @default(cuid())
  name      String    @default("")
  role      String    @default("")
  startDate DateTime
  endDate   DateTime
  desc      String    @default("[{\"type\":\"paragraph\",\"children\":[{\"text\":\"\"}]}]")
  projects  Project[] @relation("Project_job")
}

model Image {
  id              String    @id @default(cuid())
  name            String    @default("")
  image_filesize  Int?
  image_extension String?
  image_width     Int?
  image_height    Int?
  image_mode      String?
  image_id        String?
  publishDate     DateTime?
}

model Project {
  id             String     @id @default(cuid())
  name           String     @default("")
  job            Workplace? @relation("Project_job", fields: [jobId], references: [id])
  jobId          String?    @map("job")
  link           String     @default("")
  images         String     @default("[{\"type\":\"paragraph\",\"children\":[{\"text\":\"\"}]}]")
  role           String     @default("")
  responsibility String     @default("[{\"type\":\"paragraph\",\"children\":[{\"text\":\"\"}]}]")
  technology     String     @default("[{\"type\":\"paragraph\",\"children\":[{\"text\":\"\"}]}]")
